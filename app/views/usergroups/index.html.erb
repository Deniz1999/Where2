<div class="container">
  <div class="d-flex justify-content-center">
    <div class="card-trip px-5 py-4 col-6" style="border-radius: 15px; max-width: 800px">
      <h4 class="text-center">Your Group Invitations </h4>
        <% if @invitations.size > 0 %>
          <% @invitations.reverse.each do |invitation| %>
            <strong><%= invitation.group.user.first_name %></strong> has invited you to join: <strong><%= invitation.group.name.capitalize %></strong>
            <%= link_to "Accept", accept_group_usergroup_path(invitation.group, invitation), method: :put, class: "btn btn-primary btn-sm" %>
            <%= link_to "Decline", group_usergroup_path(invitation.group, invitation), method: :delete, class: "btn btn-primary btn-sm" %>
            <%= link_to group_usergroup_path(invitation.group, invitation), method: :delete, style: "color: red;", class: "ms-3 mt-1" do%>
              <i class="fas fa-ban"></i>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <div class="card-trip mt-4 px-5 py-5 col-6" style="border-radius: 15px; max-width: 650px">
      <h4 class="text-center">Your Event Invitations</h4>
        <% if @eventinvitations.size > 0 %>
          <% @eventinvitations.reverse.each do |invitation| %>
            <strong><%= invitation.event.group.user.first_name %></strong> has invited you to join: <strong><%= invitation.event.name.capitalize %></strong>
            <%= link_to "Accept", accept_event_user_path(invitation), method: :put, class: "btn btn-primary btn-sm" %>
            <%= link_to "Decline", event_user_path(invitation), method: :delete, class: "btn btn-primary btn-sm" %>
          <% end %>
        <% end %>
  </div>
</div>
