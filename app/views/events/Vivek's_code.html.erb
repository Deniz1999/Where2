<div class="container">
  <div class="col-3">
    <div class="row">
      <table class="group-table">
        <thead>
          <tr>
            <th scope="col"><h1><%= @group.name %></h1></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><p><%= user == current_user ? "You" : user.first_name %></p></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

     <div class="row">
      <table class="group-table">
        <thead>
          <tr>
            <th scope="col"><h1>Other invitees</h1></th>
          </tr>
        </thead>
        <tbody>
          <% @eventusers.each do |user| %>
            <tr>
              <td><p><%= user.user == current_user ? "You" : user.user.first_name %></p></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>

</div>
