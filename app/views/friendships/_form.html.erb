<div class="container">
  <%= simple_form_for @friendship, url: user_friendships_path(current_user)  do |f| %>
  <div class="form-group mb-3 mx-5 px-5">
      <%= f.association :user, collection: User.all, label_method: :first_name, input_html: {multiple: true, data: {controller: 'select2', select2_options_value: {tags: true}}}, placeholder: "Add your friends" %>
    <%= f.submit "Send friend request", class: "btn btn-primary mb-3 w-100" %>
  </div>
  <% end %>
</div>
