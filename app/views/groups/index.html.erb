



<div class="container my-5">
  <div class="d-flex justify-content-center">
    <h1>My Groups</h1>
  </div>
  <div class="d-flex justify-content-center">
    <table class="table my-3 table-striped table-hover table-sm" style="width: 600px;">
    <thead class="thead-dark">
      <tr>
        <th scope="col"> Name</th>
        <th scope="col"> Admin</th>
      </tr>
    </thead>
    <tbody>
      <% @usergroups.reverse.each do |group| %>
        <tr>
          <td><h3><%= link_to group.group.name, group_path(group.group)%></h3></td>
          <td><h3><%= group.group.user.first_name.capitalize %></h3></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>

  <div class="d-flex justify-content-center">
    <%= link_to "Create a new group", new_group_path, class: "btn btn-primary" %>
  </div>
</div>
